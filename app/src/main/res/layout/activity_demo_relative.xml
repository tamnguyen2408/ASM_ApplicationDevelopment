<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <View
        android:id="@+id/v_1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#203DDC"
        android:layout_marginTop="50dp"
        />
    <View
        android:id="@+id/v_2"
        android:layout_marginTop="50dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#203DDC"
        android:layout_toEndOf="@id/v_1"
        android:layout_marginStart="18dp"
        />
    <View
        android:id="@+id/v_3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#203DDC"
        android:layout_marginTop="200dp"
        android:layout_alignTop="@id/v_1"
        />
    <View
        android:id="@+id/v_4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#203DDC"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@id/v_3"
        android:layout_alignTop="@id/v_2"
        android:layout_marginStart="18dp"
        />

    <View
        android:id="@+id/v_5"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#203DDC"
        android:layout_marginTop="200dp"
        android:layout_alignTop="@id/v_3"
        />
    <View
        android:id="@+id/v_6"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="#203DDC"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@id/v_5"
        android:layout_alignTop="@id/v_4"
        android:layout_marginStart="18dp"
        />


</RelativeLayout>